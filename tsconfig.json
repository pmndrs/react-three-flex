{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2018",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "strict": true,
    "preserveSymlinks": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "@react-three/flex": ["src/index.tsx"]
    }
  },
  "include": ["src"]
}
